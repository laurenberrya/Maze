<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.wm.cs.cs301.amazebylaurenberry.WinningActivity">


    <TextView
        android:id="@+id/youWon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="205dp"
        android:layout_marginBottom="29dp"
        android:text="@string/winningScreen"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/energyConsumption"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/actualPath"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/shortestPath"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="169dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actualPath" />

    <TextView
        android:id="@+id/actualPath"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/shortestPath"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/energyConsumption" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="103dp"
        android:text="@string/winningRestartInstructions"
        app:layout_constraintBottom_toTopOf="@+id/energyConsumption"
        app:layout_constraintStart_toStartOf="@+id/youWon"
        app:layout_constraintTop_toBottomOf="@+id/youWon" />

</androidx.constraintlayout.widget.ConstraintLayout>
